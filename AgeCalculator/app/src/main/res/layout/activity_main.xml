<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="912dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        android:background="#0077B6"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/header"
            android:layout_width="415dp"
            android:layout_height="57dp"
            android:layout_marginBottom="66dp"
            android:background="#03045E"
            android:gravity="center"
            android:text="AgeCalculator"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@+id/textView4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="231dp"
            android:layout_height="75dp"
            android:layout_marginStart="151dp"
            android:layout_marginTop="123dp"
            android:layout_marginEnd="151dp"
            android:layout_marginBottom="723dp"
            android:gravity="center"
            android:text="Age"
            android:textColor="#FFFFFF"
            android:textSize="34sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />

        <Button
            android:id="@+id/button"
            android:layout_width="234dp"
            android:layout_height="52dp"
            android:layout_marginStart="87dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="88dp"
            android:backgroundTint="#03045E"
            android:text="Select DOB"
            app:layout_constraintBottom_toTopOf="@+id/date"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView4"
            app:layout_constraintVertical_bias="0.161" />

        <TextView
            android:id="@+id/tv2"
            android:layout_width="242dp"
            android:layout_height="58dp"
            android:layout_marginStart="87dp"
            android:layout_marginEnd="80dp"
            android:layout_marginBottom="217dp"
            android:gravity="center"
            android:text="In Minutes till date"
            android:textColor="#90E0EF"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/dateEdit"
            android:layout_width="242dp"
            android:layout_height="58dp"
            android:layout_marginStart="83dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="84dp"
            android:gravity="center"
            android:text="Date"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/tv1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button"
            app:layout_constraintVertical_bias="0.253" />

        <TextView
            android:id="@+id/tv1"
            android:layout_width="242dp"
            android:layout_height="58dp"
            android:layout_marginBottom="44dp"
            android:gravity="center"
            android:text="Selected Date"
            android:textColor="#90E0EF"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/minute"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.52"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button"
            app:layout_constraintVertical_bias="0.924" />

        <TextView
            android:id="@+id/minute"
            android:layout_width="242dp"
            android:layout_height="58dp"
            android:layout_marginTop="252dp"
            android:gravity="center"
            android:text="Minutes"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/tv2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>